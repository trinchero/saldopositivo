---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  hideDescription?: boolean;
  button?: {
    title: string;
    href: string;
  };
  note?: string;
}

const { title, subtitle, description, button, hideDescription, note } = Astro.props;

---

<section class="pt-32 pb-20">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>

    {subtitle && (
      <h2 class="text-2xl text-gray-600 mb-6">{subtitle}</h2>
    )}

    {!hideDescription && description && (
      <p class="text-lg mb-6">{description}</p>
    )}

    {note && (
      <div class="mt-10 text-base text-gray-500 italic">
        {note}
      </div>
    )}

    {button && (
      <a href={button.href} class="inline-block px-6 py-3 bg-black text-white rounded-lg">
        {button.title}
      </a>
    )}
  </div>
</section>
