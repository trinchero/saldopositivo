---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  button?: {
    title: string;
    href: string;
  };
}

const { title, subtitle, description, button } = Astro.props;
---

<section class="pt-32 pb-20">
  <div class="max-w-4xl mx-auto text-center">
    <h1 class="text-4xl font-bold mb-4">{title}</h1>

    {subtitle && (
      <h2 class="text-2xl text-gray-600 mb-6">{subtitle}</h2>
    )}

    {description && (
      <p class="text-lg mb-6">{description}</p>
    )}

    {button && (
      <a href={button.href} class="inline-block px-6 py-3 bg-black text-white rounded-lg">
        {button.title}
      </a>
    )}
  </div>
</section>
