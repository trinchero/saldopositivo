---
import { Image } from "astro:assets";
import about from "@/assets/pages/about/about.png";

const { title, subtitle, content } = Astro.props;
---

<section class="w-full px-6 md:px-16 py-20 max-w-6xl mx-auto">
  <div class="grid grid-cols-1 md:grid-cols-5 gap-10 items-center">

    <div class="md:col-span-2">
      <div class="w-full overflow-hidden rounded-2xl shadow-md">
        <Image
          src={about}
          alt="About"
          class="w-full h-auto object-cover"
        />
      </div>
    </div>

    <div class="md:col-span-3 text-neutral-800">
      {title && (
        <h2 class="text-3xl md:text-4xl font-bold mb-4 leading-snug">{title}</h2>
      )}
      <div class="text-xl mb-3" set:html={subtitle} />
      <div class="text-neutral-600 text-lg leading-relaxed" set:html={content} />
    </div>

  </div>
</section>
