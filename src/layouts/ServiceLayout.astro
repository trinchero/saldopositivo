---
import Container from "@/components/primitives/Container.astro";
import type { CollectionEntry } from "astro:content";

interface Props {
  frontmatter: CollectionEntry<"servicedetails">["data"];
}

const { frontmatter } = Astro.props;
---

<Container class="pt-36 pb-24 max-w-4xl">
  <article class="prose lg:prose-xl">
    <h1 class="text-4xl font-bold mb-6">{frontmatter.title}</h1>
    {frontmatter.description && (
      <p class="text-lg text-neutral-600 mb-8">{frontmatter.description}</p>
    )}
    <slot />
  </article>
</Container>
