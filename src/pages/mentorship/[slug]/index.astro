---
import { getEntryBySlug, getCollection } from "astro:content";
import MentorshipLayout from "@/layouts/MentorshipLayout.astro";

export async function getStaticPaths() {
  const entries = await getCollection("mentorship-details");

  return entries.map((entry) => {
    const slug = entry.slug;
    return {
      params: { slug },
      props: { slug },
    };
  });
}

const { slug } = Astro.params;

const entry = await getEntryBySlug("mentorship-details", slug);

if (!entry) {
  throw new Error(`Mentorship detail not found: ${slug}`);
}

const { Content, data } = await entry.render();
---

<MentorshipLayout frontmatter={data}>
  <Content />
</MentorshipLayout>
