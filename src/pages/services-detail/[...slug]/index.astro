---
import type { CollectionEntry } from "astro:content";
import ServiceLayout from "@/layouts/ServiceLayout.astro";
import { getCollectionStaticPaths } from "@/lib/collection-helpers";

export interface Props {
  data: CollectionEntry<"servicedetails">;
}

export async function getStaticPaths() {
  const rawPaths = await getCollectionStaticPaths("servicedetails");

  console.log("🔍 [getStaticPaths] Raw paths from helper:");
  rawPaths.forEach((p, i) => {
    console.log(`→ [${i}] lang: ${p.params.lang}, slug: ${p.params.slug}`);
  });

  const paths = rawPaths.map((path, i) => {
    const { lang, slug } = path.params;

    const cleanedSlug = slug?.startsWith(`${lang}/`)
      ? slug.slice(lang.length + 1)
      : slug;

    console.log(`🧼 [${i}] Cleaned slug: ${cleanedSlug} (lang: ${lang})`);

    return {
      params: {
        lang,
        slug: cleanedSlug,
      },
      props: path.props,
    };
  });

  console.log(`✅ Total paths returned: ${paths.length}`);
  return paths;
}

const { data } = Astro.props;
const { Content } = await data.render();
---

<ServiceLayout frontmatter={data.data}>
  <Content />
</ServiceLayout>
